{
	"name": "ExportBills",
	"properties": {
		"activities": [
			{
				"name": "ExportBills_APGL",
				"type": "WebActivity",
				"dependsOn": [
					{
						"activity": "Set listId",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"url": {
						"value": "@concat(pipeline().parameters.ecapBaseUrl,'/api/v3/list/',variables('exportListId'),'/export')",
						"type": "Expression"
					},
					"method": "PUT",
					"headers": {
						"eci-apikey": {
							"value": "@pipeline().parameters.ecapApiKey",
							"type": "Expression"
						}
					},
					"body": {
						"value": "{\n  \"exportMode\": \"@{pipeline().parameters.exportMode}\",\n  \"markAsExported\": @{if(pipeline().parameters.markAsExported,'true','false')},\n  \"exportNote\": \"Exported by ADF\"\n}",
						"type": "Expression"
					}
				}
			},
			{
				"name": "GetBillExportList",
				"type": "WebActivity",
				"dependsOn": [],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"url": {
						"value": "@concat(pipeline().parameters.ecapBaseUrl,'/api/v3/list?listTypeId=',if(equals(toLower(pipeline().parameters.exportMode),'ap'),'24','25'))",
						"type": "Expression"
					},
					"method": "GET",
					"headers": {
						"eci-apikey": {
							"value": "@pipeline().parameters.ecapApiKey",
							"type": "Expression"
						}
					}
				}
			},
			{
				"name": "Set listId",
				"type": "SetVariable",
				"dependsOn": [
					{
						"activity": "GetBillExportList",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"userProperties": [],
				"typeProperties": {
					"variableName": "exportListId",
					"value": {
						"value": "@string(json(activity('GetBillExportList').output.Response)[0].listId)",
						"type": "Expression"
					}
				}
			},
			{
				"name": "Export Bill List is empty",
				"type": "IfCondition",
				"dependsOn": [
					{
						"activity": "ExportBills_APGL",
						"dependencyConditions": [
							"Failed"
						]
					}
				],
				"userProperties": [],
				"typeProperties": {
					"expression": {
						"value": "@equals(activity('ExportBills_APGL').output.status.message,'Sorry, empty list of Bills is not acceptable.')",
						"type": "Expression"
					},
					"ifTrueActivities": [
						{
							"name": "No Bills Exported Notification",
							"type": "ExecutePipeline",
							"dependsOn": [],
							"userProperties": [],
							"typeProperties": {
								"pipeline": {
									"referenceName": "SendNotification",
									"type": "PipelineReference"
								},
								"waitOnCompletion": true,
								"parameters": {
									"greeting": "No bills were exported"
								}
							}
						}
					]
				}
			},
			{
				"name": "RunReformatter",
				"type": "ExecutePipeline",
				"dependsOn": [
					{
						"activity": "Retrieve Bill Export Profile",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"userProperties": [],
				"typeProperties": {
					"pipeline": {
						"referenceName": "RunReformatter",
						"type": "PipelineReference"
					},
					"waitOnCompletion": true,
					"parameters": {
						"Base64ExportProfile": {
							"value": "@base64(activity('Retrieve Bill Export Profile').output)",
							"type": "Expression"
						},
						"Base64ExportFile": {
							"value": "@base64(activity('ExportBills_APGL').output)",
							"type": "Expression"
						}
					}
				}
			},
			{
				"name": "Retrieve Bill Export Profile",
				"type": "WebActivity",
				"dependsOn": [
					{
						"activity": "ExportBills_APGL",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"url": {
						"value": "@concat(pipeline().parameters.ecapBaseUrl,'/api/v3/bill/exportProfile?exportMode=',pipeline().parameters.exportMode)",
						"type": "Expression"
					},
					"method": "GET",
					"headers": {
						"eci-apikey": {
							"value": "@pipeline().parameters.ecapApiKey",
							"type": "Expression"
						}
					}
				}
			},
			{
				"name": "Reformatter Success Notification",
				"type": "ExecutePipeline",
				"dependsOn": [
					{
						"activity": "RunReformatter",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"userProperties": [],
				"typeProperties": {
					"pipeline": {
						"referenceName": "SendNotification",
						"type": "PipelineReference"
					},
					"waitOnCompletion": true,
					"parameters": {
						"greeting": {
							"value": "@concat('Successfully reformatted bills for ', pipeline().parameters.exportMode)",
							"type": "Expression"
						}
					}
				}
			},
			{
				"name": "Reformatter Error Notification",
				"type": "ExecutePipeline",
				"dependsOn": [
					{
						"activity": "RunReformatter",
						"dependencyConditions": [
							"Failed"
						]
					}
				],
				"userProperties": [],
				"typeProperties": {
					"pipeline": {
						"referenceName": "SendNotification",
						"type": "PipelineReference"
					},
					"waitOnCompletion": true,
					"parameters": {
						"greeting": {
							"value": "@concat('Error reformatting bills for ', pipeline().parameters.exportMode)",
							"type": "Expression"
						}
					}
				}
			}
		],
		"parameters": {
			"ecapBaseUrl": {
				"type": "String",
				"defaultValue": "https://develop.energycap.com"
			},
			"exportMode": {
				"type": "String"
			},
			"markAsExported": {
				"type": "Bool",
				"defaultValue": false
			},
			"ecapApiKey": {
				"type": "String"
			}
		},
		"variables": {
			"exportListId": {
				"type": "String"
			}
		},
		"annotations": []
	}
}