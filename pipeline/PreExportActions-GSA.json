{
	"name": "PreExportActions-GSA",
	"properties": {
		"activities": [
			{
				"name": "SplitBills",
				"type": "WebActivity",
				"dependsOn": [],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"url": {
						"value": "@concat(pipeline().parameters.ecapBaseUrl,'/api/v3/billSplit/exec')",
						"type": "Expression"
					},
					"method": "POST",
					"headers": {
						"eci-apikey": {
							"value": "@pipeline().parameters.eciApiKey",
							"type": "Expression"
						}
					},
					"body": {
						"value": "{\n  \"filters\": [],\n  \"billingPeriod\": @{pipeline().parameters.billingPeriod},  \n  \"note\": \"Bill Split initiated by ADF\",\n  \"batchSettings\": {\n    \"batchCode\": \"@{guid()}\",\n    \"closeExistingBatch\": false,    \n    \"note\": \"Batch created by ADF\"\n  }\n}",
						"type": "Expression"
					}
				}
			}
		],
		"parameters": {
			"ecapBaseUrl": {
				"type": "String",
				"defaultValue": "https://develop.energycap.com"
			},
			"eciApiKey": {
				"type": "String",
				"defaultValue": "ZWNhcHxUZXN0.dGVjaGRpdl8wMDF8MTE4MHwxNDYw.NDdhNzQzMmEtYzg2ZC00ODk5LWEwZjktZDBkNTY2NDA2MTZj"
			},
			"billingPeriod": {
				"type": "Int"
			}
		},
		"annotations": []
	}
}